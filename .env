DATABASE_URL=postgresql://myuser:mypassword@localhost:5432/nldataqueries
SCHEMA=public
WEAVIATE_URL=http://localhost:8080/v1  # O la URL de tu servidor de Weaviate
POSTGRES_MANUAL_PDF=docs/postgres_manual.pdf  # Ajusta esto si el PDF está en otra ubicación
CHUNK_SIZE=1000  # Número de caracteres por chunk
CHUNK_OVERLAP=200  # Solapamiento entre chunks para mantener contexto
SIMILARITY_THRESHOLD=0.5  # Ajusta entre 0.0 (acepta todo) y 1.0 (muy estricto)
EMBEDDING_MODEL=microsoft/codebert-base  # Puedes cambiarlo a otro modelo de sentence-transformers si es necesario
EMBEDDING_CLASS=PostgresManualChunk